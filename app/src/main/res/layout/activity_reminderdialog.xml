<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ReminderdialogActivity">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="12dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/main"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_dialogTitle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Akshay Varma"
                android:textStyle="bold"
                android:textSize="24sp"/>
            <ImageView
                android:id="@+id/img_dialogLocation"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintEnd_toStartOf="@id/txt_dialogDistance"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_baseline_location_on_24"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_dialogDistance"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="0.25 mile"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_dialogLocation"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogTitle"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:text="1444 rue Mackay"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/img_dialogDelete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogLocation"
                android:src="@drawable/ic_baseline_delete_forever_24"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_dialogDelete"
                app:layout_constraintTop_toBottomOf="@id/img_dialogDelete"
                app:layout_constraintStart_toStartOf="@id/img_dialogDelete"
                app:layout_constraintEnd_toEndOf="@id/img_dialogDelete"
                android:layout_marginTop="4dp"
                android:text="Delete"
                android:textStyle="bold"
                android:textSize="10sp"/>
            <ImageView
                android:id="@+id/img_dialogEdit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:layout_constraintStart_toEndOf="@id/img_dialogDelete"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/txt_dialogLocation"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_dialogEdit"
                app:layout_constraintTop_toBottomOf="@id/img_dialogEdit"
                app:layout_constraintStart_toStartOf="@id/img_dialogEdit"
                app:layout_constraintEnd_toEndOf="@id/img_dialogEdit"
                android:layout_marginTop="4dp"
                android:text="Edit"
                android:textStyle="bold"
                android:textSize="10sp"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_dialogStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="@id/img_dialogLocation"
                app:layout_constraintTop_toBottomOf="@id/img_dialogLocation"
                android:checked="true"
                android:layout_marginTop="60dp" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>